{{!< default}}

{{#post}}
<article class="{{post_class}}">
    <header>
        <h1 class="post-title"><a href="{{url}}" title="Permalink">{{title}}</a></h1>
        <p class="post-timestamp"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></p>
    </header>
    {{content}}
    <footer>
        <p>
            {{tags prefix=" on "}}
        </p>
    </footer>
</article>
{{/post}}
