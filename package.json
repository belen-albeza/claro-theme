{
  "name": "claro-theme",
  "description": "Blog theme for Ghost",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/belen-albeza/claro-theme.git"
  },
  "keywords": [
    "ghost",
    "theme",
    "blog"
  ],
  "author": "Bel√©n \"Benko\" Albeza",
