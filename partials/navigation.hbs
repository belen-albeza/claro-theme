<nav class="main-menu"><ul>
{{#foreach navigation}}
    <li class="{{#if current}}active{{/if}}">
        <a href="{{url}}">{{label}}</a>
    </li>
{{/foreach}}
    <li class="separator"><a href="{{@blog.url}}/rss/">
        <svg width="20" height="20"><use href="{{asset 'images/rss.svg'}}#icon"/></svg>
    </a></li>

    {{#if @blog.twitter}}<li><a href="{{twitter_url @blog.twitter}}">
        <svg width="37" height="30"><use href="{{asset 'images/twitter.svg'}}#icon"/></svg>
    </a></li>{{/if}}
</ul></nav>
